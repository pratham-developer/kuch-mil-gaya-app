<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg"
    tools:context=".InsideMyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Icons for notification and profile -->

        <ImageView
            android:id="@+id/back"
            android:src="@drawable/backarrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp" />



        <!-- Welcome message -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/myactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="My Activity"
            android:textSize="32sp"
            android:textColor="@color/gold"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />







        <!-- Instructional text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myactivity"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:text="What do you want to access?"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:fontFamily="sans-serif" />



        <!-- Buttons for actions -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_myclaims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mailId"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="16dp"
            android:text="My Claims"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_myrep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_myclaims"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="16dp"
            android:text="My Reports"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp" />


    </RelativeLayout>
</ScrollView>
