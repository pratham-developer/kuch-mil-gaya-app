<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_tint"
    tools:context=".MainActivity">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="Welcome!"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="42sp"
        app:fontFamily="sans-serif" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/kuch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="64dp"
        android:text="Kuch"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mil_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kuch_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="- Mil -"
        android:textColor="@color/purple"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:fontFamily="sans-serif-bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gaya_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mil_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:text="Gaya"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-bold" />

    <com.google.android.material.textview.MaterialTextView
android:id="@+id/sign_in_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/gaya_text"
android:layout_centerHorizontal="true"
android:layout_marginTop="80dp"
android:text="Sign In with Google!"
android:textColor="@android:color/black"
android:textSize="22sp"
app:fontFamily="sans-serif" />

<com.google.android.gms.common.SignInButton
android:id="@+id/bt_sign_in"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/sign_in_text"
android:layout_centerHorizontal="true"
android:layout_marginTop="25dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginBottom="16dp"/>

    </RelativeLayout>
