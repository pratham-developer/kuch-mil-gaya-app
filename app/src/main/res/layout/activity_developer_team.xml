<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg"
    tools:context=".DeveloperTeam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back button and Developer Team title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/back"
                android:src="@drawable/backarrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/developerTeamTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/back"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Developer Team"
                android:textSize="32sp"
                android:textColor="@color/gold"
                android:textStyle="bold"
                app:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Developer Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/black"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:src="@drawable/pratham"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dev_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pratham Khanduja"
                        android:textColor="@color/gold"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dev_role_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App &amp; Backend Dev"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/linkedin_1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn"
                        android:backgroundTint="@color/gold"
                        android:textColor="@android:color/black"
                        app:cornerRadius="16dp"
                        android:textSize="12sp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/insta_1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:backgroundTint="@color/gold"
                        android:textColor="@android:color/black"
                        app:cornerRadius="16dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Repeat the CardView block for other developers, just changing the IDs and names -->
        <!-- Example for Developer 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/black"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <ImageView
                        android:src="@drawable/keshav"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dev_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keshav Dadhich"
                        android:textColor="@color/gold"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dev_role_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design &amp; Backend Dev"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/linkedin_2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn"
                        android:backgroundTint="@color/gold"
                        android:textColor="@android:color/black"
                        app:cornerRadius="16dp"
                        android:textSize="12sp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/insta_2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:backgroundTint="@color/gold"
                        android:textColor="@android:color/black"
                        app:cornerRadius="16dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/black"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <ImageView
                        android:src="@drawable/rudra"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dev_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rudra Gupta"
                        android:textColor="@color/gold"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dev_role_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design Lead"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/linkedin_3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn"
                        android:backgroundTint="@color/gold"
                        android:textColor="@android:color/black"
                        app:cornerRadius="16dp"
                        android:textSize="12sp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/insta_3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:backgroundTint="@color/gold"
                        android:textColor="@android:color/black"
                        app:cornerRadius="16dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!-- Continue with the same pattern for other developers -->

    </LinearLayout>
</ScrollView>
