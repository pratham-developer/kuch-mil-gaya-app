<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:gravity="center"
            tools:text="Item Name" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="6">

            <!-- Date Found -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Date Found"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/gold"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:background="@drawable/searchview_background"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:text="Item Date" />

            <!-- Time Found -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:text="Time Found"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/gold"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_marginTop="15dp"
                android:background="@drawable/searchview_background"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:text="Item Time" />

            <!-- Location -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:text="Location"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/gold"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_marginTop="15dp"
                android:background="@drawable/searchview_background"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:text="Item Place" />

            <!-- Contact -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:text="Contact"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/gold"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/searchview_background"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:text="Item Contact" />

            <!-- Description -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:text="Description"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/gold"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_marginTop="15dp"
                android:background="@drawable/searchview_background"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:text="Item Description" />

            <!-- Claimed By -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:text="Claimed By"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/gold"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_claimed_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_marginTop="15dp"
                android:background="@drawable/searchview_background"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginStart="10dp"
                tools:text="Item Claimed By" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/gold"
            android:text="Generate QR"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/gold"
            android:text="Delete"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp" />

    </LinearLayout>
</ScrollView>
