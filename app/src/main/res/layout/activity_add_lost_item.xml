<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_tint"
    tools:context=".AddLostItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- EditText for Item Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/CustomTextInputLayout"
            android:hint="Item Name">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="12dp"
                android:importantForAccessibility="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name_layout"
            style="@style/CustomTextInputLayout"
            android:layout_marginBottom="16dp"
            android:hint="Date">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/black"
                android:importantForAccessibility="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_layout"
            style="@style/CustomTextInputLayout"
            android:layout_marginBottom="16dp"
            android:hint="Time">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/black"
                android:importantForAccessibility="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Place -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_layout"
            style="@style/CustomTextInputLayout"
            android:layout_marginBottom="16dp"
            android:hint="Place">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/black"
                android:importantForAccessibility="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_layout"
            style="@style/CustomTextInputLayout"
            android:layout_marginBottom="16dp"
            android:hint="Description">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/black"
                android:importantForAccessibility="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Contact -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_layout"
            style="@style/CustomTextInputLayout"
            android:layout_marginBottom="16dp"
            android:hint="Contact">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/black"
                android:importantForAccessibility="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button to Select Image -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/select_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_below="@id/contact_layout"
            android:layout_marginBottom="16dp"
            android:importantForAccessibility="yes"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white" />

        <!-- ImageView to Display Selected Image -->
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/select_image_button"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Selected Image" />

        <!-- Button to Add Lost Item -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Lost Item"
            android:layout_below="@id/image_view"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            android:importantForAccessibility="yes" />

    </RelativeLayout>
</ScrollView>
