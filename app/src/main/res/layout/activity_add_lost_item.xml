<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg"
    tools:context=".AddLostItemActivity"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- EditText for Item Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="#4DFFEEC3"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/gold"
            android:hint="Name the found item in 2-3 words"
            app:hintTextColor="@color/gold"
            app:placeholderTextColor="@color/gold"
            app:cursorColor="@color/gold"
            android:outlineSpotShadowColor="@color/gold"
            android:paddingTop="8dp"
            android:textColorHint="@color/gold"
            android:paddingBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_name"
                android:textColorHighlight="@color/dull_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/item_name_layout"
            app:boxBackgroundColor="#4DFFEEC3"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/gold"
            android:hint="When did you find it?"
            app:hintTextColor="@color/gold"
            app:placeholderTextColor="@color/gold"
            app:cursorColor="@color/gold"
            android:outlineSpotShadowColor="@color/gold"
            android:paddingTop="8dp"
            android:textColorHint="@color/gold"
            android:paddingBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date"
                android:textColorHighlight="@color/dull_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:focusable="false"
                android:clickable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/date_layout"
            app:boxBackgroundColor="#4DFFEEC3"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/gold"
            android:hint="Time"
            app:hintTextColor="@color/gold"
            app:placeholderTextColor="@color/gold"
            app:cursorColor="@color/gold"
            android:outlineSpotShadowColor="@color/gold"
            android:paddingTop="8dp"
            android:textColorHint="@color/gold"
            android:paddingBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/time"
                android:textColorHighlight="@color/dull_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:focusable="false"
                android:clickable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Place -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/time_layout"
            app:boxBackgroundColor="#4DFFEEC3"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/gold"
            android:hint="Place"
            app:hintTextColor="@color/gold"
            app:placeholderTextColor="@color/gold"
            app:cursorColor="@color/gold"
            android:outlineSpotShadowColor="@color/gold"
            android:paddingTop="8dp"
            android:textColorHint="@color/gold"
            android:paddingBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/place"
                android:textColorHighlight="@color/dull_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/place_layout"
            app:boxBackgroundColor="#4DFFEEC3"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/gold"
            android:hint="Tell us more about it"
            app:hintTextColor="@color/gold"
            app:placeholderTextColor="@color/gold"
            app:cursorColor="@color/gold"
            android:outlineSpotShadowColor="@color/gold"
            android:paddingTop="8dp"
            android:textColorHint="@color/gold"
            android:paddingBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc"
                android:textColorHighlight="@color/dull_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText for Contact -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/desc_layout"
            app:boxBackgroundColor="#4DFFEEC3"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="@color/gold"
            android:hint="How can we contact you?"
            app:hintTextColor="@color/gold"
            app:placeholderTextColor="@color/gold"
            app:cursorColor="@color/gold"
            android:outlineSpotShadowColor="@color/gold"
            android:paddingTop="8dp"
            android:textColorHint="@color/gold"
            android:paddingBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contact"
                android:textColorHighlight="@color/dull_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button to Select Image -->
        <TextView
            android:id="@+id/add_photo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_layout"
            android:text="Add a photo for reference"
            android:textColor="@color/gold"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/add_photo_label"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#4DFFEEC3">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/dashed_border"
                android:contentDescription="Selected Image" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Button to Add Lost Item -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_card"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="16dp"
            android:text="Submit"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp"/>
    </RelativeLayout>
</ScrollView>
